# Description: Minimal tiling window manager
# URL:         http://i3wm.org/
# Maintainer:  Ola HÃ¥kansson <ola dot hakansson at gmail dot com>
# Depends on:  libxkbcommon yajl startup-notification libev xorg-xcb-util-keysyms pango xorg-xcb-util-wm xorg-xcb-util-cursor

name=i3
version=4.18
release=1
source=(http://i3wm.org/downloads/$name-$version.tar.bz2)

build() {
  cd $name-$version

  ./configure --prefix=/usr --disable-docs

  cd x86_64-pc-linux-gnu

  make PREFIX=/usr
  make DESTDIR=$PKG install

  install -d $PKG/usr/share/man/man1
  install -m 0644 ../man/*.1 $PKG/usr/share/man/man1/

  rm -rf $PKG/usr/share/doc
}
