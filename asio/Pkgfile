# Depends on:

name=asio
version=1.28.1
release=1
source=(https://downloads.sourceforge.net/project/$name/$name/$version%20%28Stable%29/$name-$version.tar.gz)

build() {
  cd $name-$version

  ./configure --prefix=/usr --without-boost

  make DESTDIR=$PKG install
}
