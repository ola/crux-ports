name=i2c-tools
version=4.3
release=1
source=(https://mirrors.edge.kernel.org/pub/software/utils/$name/$name-$version.tar.xz)

build() {
  cd $name-$version
  make PREFIX=/usr DESTDIR=$PKG install
}
