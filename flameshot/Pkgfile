# Description:  Powerful yet simple to use screenshot software
# URL:          https://flameshot.org/
# Maintainer:   Ola HÃ¥kansson <ola dot hakansson at gmail dot com>
# Depends on:   ninja cmake qt5

name=flameshot
version=0.10.2
release=1
source=(https://github.com/flameshot-org/$name/archive/refs/tags/v$version.tar.gz)

build() {

  mkdir build
  cmake -GNinja \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -S $name-$version \
        -B $SRC/build

  ninja -C build -j ${JOBS:-1}
  DESTDIR=$PKG ninja -C build install

  rm -rf $PKG/usr/share/flameshot/translations
}
